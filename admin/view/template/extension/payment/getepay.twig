{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-getepay" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-getepay" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-key-id">{{ entry_key_mid }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_getepay_key_mid" value="{{ getepay_key_mid }}" placeholder="{{ entry_key_mid }}" id="input-key-id" class="form-control" />
              {% if error_key_mid %}
              <div class="text-danger">{{ error_key_mid }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-key-terminalId">{{ entry_key_terminalId }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_getepay_key_terminalId" value="{{ getepay_key_terminalId }}" placeholder="{{ entry_key_terminalId }}" id="input-key-terminalId" class="form-control" />
              {% if error_key_terminalId %}
              <div class="text-danger">{{ error_key_terminalId }}</div>
              {% endif %}
            </div>
          </div>
       <div class="form-group">
          <label class="col-sm-2 control-label" for="input-key-key">{{ entry_key_key }}</label>
          <div class="col-sm-10">
            <input type="text" name="payment_getepay_key_key" value="{{ getepay_key_key }}" placeholder="{{ entry_key_key }}" id="input-key-key" class="form-control" />
            {% if error_key_key %}
            <div class="text-danger">{{ error_key_key }}</div>
            {% endif %}
          </div>
        </div>
         <div class="form-group">
            <label class="col-sm-2 control-label" for="input-key-iv">{{ entry_key_iv }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_getepay_key_iv" value="{{ getepay_key_iv }}" placeholder="{{ entry_key_iv }}" id="input-key-iv" class="form-control" />
              {% if error_key_iv %}
              <div class="text-danger">{{ error_key_iv }}</div>
              {% endif %}
            </div>
          </div>
           <div class="form-group">
              <label class="col-sm-2 control-label" for="input-key-url">{{ entry_key_url }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_getepay_key_url" value="{{ getepay_key_url }}" placeholder="{{ entry_key_url }}" id="input-key-url" class="form-control" />
                {% if error_key_url %}
                <div class="text-danger">{{ error_key_url }}</div>
                {% endif %}
              </div>
            </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status"><span data-toggle="tooltip" title="{{ help_order_status }}">{{ entry_order_status }}</span></label>
            <div class="col-sm-10">
              <select name="payment_getepay_order_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                  {% if ((getepay_order_status_id and order_status.order_status_id == getepay_order_status_id)) %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_getepay_status" id="input-status" class="form-control">
                {% if getepay_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
         


          

         
          
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}